<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NTTShop Administrador</title>
    <link rel="stylesheet" href="~/Content/bootstrap/dist/css/bootstrap.min.css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" type="text/css" href="~/Content/PagedList.css" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary bg-dark border-bottom border-body" data-bs-theme="dark">
            <div class="container-fluid">
                <a> @Html.ActionLink("WALKIM", "Index", "Home", null, new { @class = "navbar-brand text-light" })</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav">
                        @if (Session["idUser"] != null)
                        {

                            <li class="nav-item">
                                <a>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link text-light" })</a>
                            </li>
                            <li class="nav-item">
                                <a>@Html.ActionLink("Producto", "Index", "Producto", null, new { @class = "nav-link text-light" })</a>
                            </li>
                            <li class="nav-item">
                                <a>@Html.ActionLink("Pedidos", "Index", "Pedido", null, new { @class = "nav-link text-light" })</a>
                            </li>
                            <li class="nav-item">
                                <a>@Html.ActionLink("Idiomas", "Index", "Idiomas", null, new { @class = "nav-link text-light" })</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Usuarios</a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a>@Html.ActionLink("Usuarios", "Index", "Usuario", null, new { @class = "dropdown-item text-light" })</a>
                                    </li>
                                    <li>
                                        <a>@Html.ActionLink("Usuario Admin", "Index", "UsuarioAdmin", null, new { @class = "dropdown-item text-light" })</a>
                                    </li>
                                </ul>
                            </li>

                        }
                        else
                        {
                            <li class="nav-item">
                                <a>@Html.ActionLink("Iniciar Sesión", "Login", "Login", null, new { @class = "nav-link text-light" })</a>
                            </li>

                        }

                    </ul>

                </div>
            </div>
        </nav>
    </header>
        <div class="container body-content flex-grow-1" style="margin-top:10px;">
            <main role="main">
                @RenderBody()
            </main>
          
        </div>
    <footer class="footer mt-auto py-3 bg-light">
        <div class="container">
            <p class="text-muted">&copy; @DateTime.Now.Year - NTTShop Administrador</p>
        </div>
    </footer>

    <script src="~/Content/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

